<% layout('layouts/boilerplate') %>

    <div class="main-content">
        <% for (let post of posts) { %>
            <div class="post-container">
                <button class="more-button"">
                    <img src=" /imgs/more.png" alt="comment icon" data-post-id="<%= post._id %>">
                </button>
                <img class="post-img" src="<%= post.image %>" alt="">
                <div class="icon-container">
                    <img class="icon-img" src="/imgs/like-unchecked.png" alt="like icon">
                    <img class="icon-img" src="/imgs/comment.png" alt="comment icon">
                    <img class="icon-img" src="/imgs/forward.png" alt="forward icon">
                </div>
                <p class="post-info-text">
                    <%= post.likes %> Likes
                </p>
                <p class="post-info-text">
                    <%= post.description %>
                </p>
                <%=post._id%>
            </div>
            <% } %>

                <div id="more-container">
                    <form id="myForm" method="POST">
                        <button class="more-buttons">Delete</button>
                    </form>
                    <button class="more-buttons" id="edit-button">Edit</button>
                </div>


    </div>

    <style>
        .post-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 25vw;
            margin: 0 auto;
        }

        .post-img {
            width: 100%;
            height: 40%;
            border: 2px solid #1F1E1E;
            border-radius: 10px;
        }

        .icon-container {
            display: flex;
            justify-content: flex-start;
            width: 100%;
            padding: 10px 0px 10px 0px;
        }

        .icon-img {
            width: 26px;
            height: 26px;
            margin-right: 12px;
        }

        .main-content {
            position: fixed;
            right: 0;
            width: 85%;
            height: 100%;
            background-color: black;
            overflow: auto;
            padding: 40px;
            color: white;
            /* Added text color for the form */
        }

        .more-button {
            align-self: flex-end;
            border: 0px;
            background: transparent;
        }

        .more-button:hover {
            cursor: pointer;
        }

        .more-button img:active {
            filter: brightness(0.35);
        }

        #more-container {
            position: fixed;
            width: 450px;
            height: 500px;
            top: 50%;
            left: 50%;
            margin-top: -250px;
            /* Negative half of height. */
            margin-left: -225px;
            /* Negative half of width. */
            background-color: #1F1E1E;
            display: none;
            /* Initially hide the more container */
            border-radius: 25px;
        }

        .more-buttons {
            width: 100%;
            height: 10%;
            background: transparent;
            border: 0px;
            color: red;
            padding: 20px;
            border-bottom: 1px solid gray;
        }

        .post-info-text {
            font-family: sans-serif;
            color: white;
            align-self: flex-start;
            margin-bottom: 15px;
        }

        .post-info-text:nth-of-type(2) {
            font-size: 14px;
            padding-bottom: 15px;
            width: 100%;
            border-bottom: 2px solid #1F1E1E;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const moreButtons = document.querySelectorAll(".more-button img");
            const editButton = document.getElementById("edit-button");
            const moreContainer = document.getElementById("more-container");
            const mainContent = document.querySelector(".main-content");
            let postID;
            const form = document.getElementById("myForm");

            function toggleMoreContainer(event) {
                const clickedButton = event.currentTarget;
                postID = clickedButton.dataset.postId;
                form.action = `/${postID}/?_method=DELETE`;

                if (moreContainer.style.display === "none") {
                    //enable scroll
                    moreContainer.style.display = "block";
                    mainContent.style.overflow = "hidden";
                } else {
                    //disable scroll
                    moreContainer.style.display = "none";
                    mainContent.style.overflow = "auto";
                }
            }

            editButton.addEventListener("click", function () {
                // Redirect to /id/edit
                window.location.href = `/${postID}/edit`;
            });

            for (let moreButton of moreButtons) {
                moreButton.addEventListener("click", toggleMoreContainer);
            }
        });
    </script>