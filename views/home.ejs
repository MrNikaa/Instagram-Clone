        }

        .main-content {
            position: fixed;
            right: 0;
            width: 85%;
            height: 100%;
            background-color: black;
            overflow: auto;
            padding: 40px;
            color: white;
            /* Added text color for the form */
        }

        .post-info-text{
            font-family: sans-serif;
            color: white;
            align-self: flex-start;
            margin-bottom: 15px;
        }
        .post-info-text:nth-of-type(2){
            font-size: 14px;
        }
    </style>